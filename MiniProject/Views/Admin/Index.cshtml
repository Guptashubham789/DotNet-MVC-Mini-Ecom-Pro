
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

    <style>
        body {
            background: whitesmoke;
        }

        .outer {
            min-height: 300px;
            width: 400px;
            margin: 150px auto;
            border-radius: 20px;
            background: white;
            box-shadow: 0px 0px 5px 0px black;
        }

        .childbox {
            min-height: 200px;
            width: 350px;
            margin: 20px auto;
            padding: 10px;
            border-radius: 10px;
            box-sizing: border-box;
            background: whitesmoke;
        }

            .childbox:hover {
                background: white;
                box-shadow: 0px 0px 10px 0px black;
                transition: 1s;
            }

        .txtinput {
            min-height: 40px;
            width: 300px;
        }
    </style>
</head>
<body>
    <div class="outer"> 
        <h2 style="text-align:center;font-family:serif;font-weight:initial">Hey! Login <b style="color:red">Here</b></h2>
        
        <div class="childbox">
            <center>
                <form method="post">
                    <br />
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">Email</span>
                        <input type="text" class="form-control txtinput" name="email" placeholder="Email" aria-label="Username" aria-describedby="basic-addon1">
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">Password</span>
                        <input type="text" class="form-control txtinput" name="password" placeholder="Password" aria-label="Username" aria-describedby="basic-addon1">
                    </div>
                    <div class="input-group mb-3">
                        <input type="submit" class="form-control txtinput" value="Login"/>
                    </div>
                </form>
            </center>
        </div>
    </div>
</body>
</html>
