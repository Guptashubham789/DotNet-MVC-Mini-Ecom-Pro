    <style>


        .login {
            min-height: 200px;
            width: 200px;
            background-color: rgba(0,0,0,.3);
            border: 2px groove white;
            border-radius: 10px;
            position: absolute;
            top: 150px;
            left: 700px;
        }

        .box {
            height: 200px;
            width: 300px;
            background: pink;
            border: 2px solid black;
            animation-name: boxborder;
            animation-iteration-count: infinite;
            animation-duration: 10s;
            animation-direction: alternate;
        }

        .outer {
            min-height: 300px;
            width: 400px;
            background: whitesmoke;
            box-shadow: 2px 1px 5px 2px rgb(128 128 128);
            margin: 50px auto;
            border-radius: 10px;
        }

        #box1 {
            margin-left: 5px;
            margin-top: 10px;
        }

        body {
            animation-name: shubham;
            animation-iteration-count: infinite;
            animation-duration: 4s;
        }

        @@keyframes shubham {
            10% {
                background: #eeeef2;
            }

            50% {
                background: #e2e3e6;
            }

            100% {
                background: #eeeef2;
            }
        }

        @@keyframes boxborder {
            10% {
                box-shadow: 2px 1px 5px 2px #c3c3c6;
                border: 1px groove #c3c3c6;
            }

            20% {
                box-shadow: 2px 1px 5px 2px #eeeef2;
            }

            40% {
                box-shadow: 2px 1px 5px 2px rgb(128 128 128);
            }

            60% {
                box-shadow: 2px 1px 5px 2px #c3c3c6;
            }

            80% {
                box-shadow: 2px 1px 5px 2px #eeeef2;
            }

            100% {
                box-shadow: 2px 1px 5px 2px rgb(128 128 128);
            }
        }
    </style>
    <div class="container">
        <div class="row outer">
            <div class="container">

                <div class="col-sm-12">
                    <form method="post" enctype="multipart/form-data">
